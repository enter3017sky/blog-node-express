<!DOCTYPE html>
<html>
<head>

<%- include('head'); %>

</head>
<body>
<!-- 首頁的效果 -->
<div class="container-fluid">

    <%- include('navbar'); %>

    <header class="jumbotron text-center bg-white showBgPic">

        <%- `<h1>${title}</h1>` %>

        <% if(user) { %>
            <button type='button' class='badge btn-outline-secondary mr-1'>
                <%= user %> 登入中
            </button>
        <% } %>

    </header>

        <!-- 顯示文章 -->
        <% for(var i = 0; i < posts.length; i++) { %>
            <div class='post__container'>
                <article class='card-body col-md-10 col-xl-8 mx-auto post__body'>
                    <div class='mb-3'><span class='post__time'><%= posts[i].created_at %></span></div>
                    <div class='post__title'>
                        <h2><a href='/posts/<%=posts[i].id%>' class='text-dark post__link'><%= posts[i].title %></a></h2>
                    </div>
                    <div class='post__content'><%- posts[i].content %></div>
                </article>
                <footer class='col-md-10 col-xl-8 mt-4 pl-2 mx-auto'>
                    <p>
                        <a href="/posts/<%=posts[i].id%>" class='more__link'>
                            READ MORE
                        </a>
                    </p>
                </footer>
            </div>
        <% } %>
    
    <%- include('footer', { footerText: 'Copyright © 2019 - enter3017sky' 這是 TWGD 的 mentor-program-2nd 作業})%>

</div>
</body>
</html>